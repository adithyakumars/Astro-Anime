---
export interface AnimeProp {
  id: string;
  name: string;
  image: {
    original: string;
  };
  kind: string;
  episodes: number;
  episodes_aired: number;
  score: string;
}

interface Props {
  key: string;
  anime: AnimeProp;
  index: number;
}

const { anime } = Astro.props;

// Sample need or else no needed
console.log(anime);

// Image are represents star, episodes used svg,png,jpg  
const star =  "./assets/star.svg";
const episodes =  "./assets/episodes.svg";
---
<div class="max-w-sm rounded relative w-full">
    <div class="relative w-full h-[38vh]">
      <img
        srcset={`https://shikimori.one${anime.image.original}`}
        alt={anime.name}
        class="rounded-xl"
      />      
    </div>
    <div class="py-4 flex flex-col gap-3">
      <div class="flex justify-between items-center gap-1">
        <h2 class="font-bold text-white text-xl line-clamp-1 w-full">
          {anime.name}
        </h2>
        <div class="py-1 px-2 bg-[#161921] rounded-sm">
          <p class="text-white text-sm font-bold capitalize">
            {anime.kind}
          </p>
        </div>
      </div>
      <div class="flex gap-4 items-center">
        <div class="flex flex-row gap-2 items-center">
          <img
            src={episodes}
            alt="episodes"
            width={20}
            height={20}
            class="object-contain"
          />
          <p class="text-base text-white font-bold">
            {anime.episodes || anime.episodes_aired}
          </p>
        </div>
        <div class="flex flex-row gap-2 items-center">
          <img
            src={star}
            alt="star"
            width={18}
            height={18}
            class="object-contain"
          />
          <p class="text-base font-bold text-[#FFAD49]">{anime.score}</p>
        </div>
      </div>
    </div>
</div>